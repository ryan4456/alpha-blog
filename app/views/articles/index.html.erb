<h1>Article List</h1>
<%= link_to 'Home', root_path %> | <%= link_to 'New Article', new_article_path %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each { |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td>
          <%= link_to 'Show', article_path(item) %>
          <%= link_to 'Edit', edit_article_path(item) %>
          <%= link_to 'Delete', article_path(item), method: :delete %>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>